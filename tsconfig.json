{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@whale-tracker/shared": ["./shared"],
      "@whale-tracker/wallets": ["./packages/wallets/src"],
      "@whale-tracker/events": ["./packages/events/src"],
      "@whale-tracker/indexer": ["./packages/indexer/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
