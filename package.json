{
  "name": "whale-tracker",
  "version": "0.1.0",
  "private": true,
  "description": "Whale wallet tracking x402 API - track significant wallet movements on-chain",
  "workspaces": [
    "shared",
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "eslint packages shared",
    "test": "npm run test --workspaces --if-present",
    "start": "node dist/packages/api/src/server.js"
  },
  "keywords": [
    "whale",
    "crypto",
    "x402",
    "ethereum",
    "tracking"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
